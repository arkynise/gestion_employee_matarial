{% extends "dashboard/index.html.twig" %}


{% block section %}
	<section>

		<form action="{{path('save_upade_user',{'username':user.username})}}" method="post" enctype="multipart/form-data" class="scrollable_Y p-4" style="height:70vh;">

			<div data-mdb-input-init class="form-outline mb-4">
				<label class="form-label" for="typePasswordX-2">type</label>
				<select name="type" id="equipment_state" class="form-control form-control-lg">


                
                 
					<option value="ROLE_ADMIN" {% if "ROLE_ADMIN" in user.roles %}selected{% endif %}
                    >admin</option>
					<option value="ROLE_SUPER_ADMIN" {% if "ROLE_SUPER_ADMIN" in user.roles %}selected{% endif %}>super Admin</option>
				</select>
			</div>
			<div data-mdb-input-init class="form-outline mb-4">

				<label class="form-label fs-5" for="username">
					{% if app.session.flashBag.has('error_username') %}
						{% for message in app.session.flashBag.get('error_username') %}
							<p style="color:red;">{{message}}</p>
						{% endfor %}
					{% else %}
						username
					{% endif %}
				</label>
				<input type="text" id="username" name="username" minlength="4" value="{{user.username}}" class="form-control form-control-lg" required/>


			</div>
			<div data-mdb-input-init class="form-outline mb-4">

				<label class="form-label fs-5" for="typeEmailX-2">
					{% if app.session.flashBag.has('error_email') %}
						{% for message in app.session.flashBag.get('error_email') %}
							<p style="color:red;">{{message}}</p>
						{% endfor %}
					{% else %}
						email
					{% endif %}
				</label>
				<input type="email" list="emails_list" id="typeEmailX-2" name="email" minlength="4" value="{{user.email}}" class="form-control form-control-lg" required/>


			</div>
			<div data-mdb-input-init class="form-outline mb-4">
				<label class="form-label" for="password_field">password</label>
				<div class="d-flex">
					<input type="password" id="password" name="password" class="form-control form-control-lg" minlength="4"/>
					<button class="btn btn-primary btn-lg btn-block" type="button" onclick="generatePassword()">generer un password</button>
				</div>
				<div>
					<input type="checkbox" name="" id="password_visibility">
					<label for="password_visibility">show password</label>
				</div>


			</div>


			<button data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg btn-block" type="submit">sauvegarder</button>
		</form>


	</section>


{% endblock %}


{% block jscript %}
	<script src="{{asset('js/generate_password.js')}}"></script>

{% endblock %}
