{% extends 'dashboard/index.html.twig' %}


{% block search_bar %}

	{% include 'users/searchbar.html.twig' %}

{% endblock %}


{% block section %}

	<div id="users">
		{% if count is defined %}
			<div>

				<p>le nombre d'employés trouvé est
					{{count}}</p>

			</div>
		{% endif %}

		<table class="table table-striped table-dark">
			<thead>
				<tr>
					<th scope="col" class="text-center" style="width:10vw;">username</th>
					<th scope="col" class="text-center" style="width:10vw;">email</th>
					<th scope="col" class="text-center" style="width:10vw;">date de creetion</th>
					<th scope="col" class="text-center" style="width:10vw;"></th>
				</tr>
			</thead>
		</table>
		<div class="scrollable_Y" style="height:70vh;">
			<table class="table table-striped">
				<tbody>
					{% for user in users %}


						<tr>
							<th scope="row" class="text-center" style="width:10vw;">{{user.username}}</th>
							<td class="text-center" style="width:10vw;">{{user.email}}</td>
							<td class="text-center" style="width:10vw;">{{ user.lastLogin() ? user.lastLogin()|date('Y-m-d') : 'N/A' }}</td>
							<td class="text-center" style="width:10vw;">
								<button type="button" class="btn btn-outline-danger">
									<i class="fa-regular fa-trash-can fa-xl"></i>
									<a href="" id="" class="d-none"></a>
								</button>
								<form action="{{path('updateuser',{'id':user.username})}}" method="post">
									<button type="submit" class="btn btn-outline-success">
										<i class="fa-solid fa-pen fa-xl" style="color: #63E6BE;"></i>
										<a href="" id="" class="d-none"></a>
									</button>
								</form>
							</td>
						</tr>
					{% endfor %}

				</tbody>

			</table>
		</div>

	</div>

{% endblock %}
