{% extends 'dashboard/index.html.twig' %}





{% block section %}

	<div id="equipment">
		<table class="table table-striped table-dark">
			<thead>
				<tr>
				{% if is_granted('ROLE_SUPER_ADMIN') %}
					<th scope="col" class="text-center" style="width:10vw;">utilisateur</th>
				{% endif %}
					<th scope="col" class="text-center" style="width:10vw;">action</th>
					<th scope="col" class="text-center" style="width:10vw;">table</th>
					<th scope="col" class="text-center" style="width:10vw;">sur </th>
					<th scope="col" class="text-center" style="width:10vw;">date</th>
					<th scope="col" class="text-center" style="width:10vw;">heure</th>
				</tr>
			</thead>
		</table>
	
		
		<div  class="scrollable_Y" style="height:70vh;">
			<table class="table table-striped">
				<tbody>
                {% for ntf in ntfs %}
					<tr title="disponibe">
						
						{% if is_granted('ROLE_SUPER_ADMIN') %}
						<td class="text-center" style="width:10vw;">{{ntf.who}} </td>
                        {% endif %}
						<td class="text-center" style="width:10vw;">{{ntf.getDidWhat()}}</td>
                        <td class="text-center" style="width:10vw;">{{ntf.getInTable()}}</td>
						<td class="text-center" style="width:10vw;">{{ntf.getInLine()}}</td>
						<td class="text-center" style="width:10vw;">{{ ntf.getDateNotefecation() ? ntf.getDateNotefecation()|date('Y-m-d') : 'N/A' }}</td>
                        <td class="text-center" style="width:10vw;">{{ ntf.getDateNotefecation() ? ntf.getDateNotefecation()|date('H:m:i') : 'N/A' }}</td>
					</tr>
                {% endfor %}
					
				</tbody>

			</table>
		</div>

	</div>

{% endblock %}



	